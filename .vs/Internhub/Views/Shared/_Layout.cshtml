        <li style="list-style-type:none; border:1px solid rgba(51, 51, 51, 0.356);; border-radius:50px;"
            class="text-center py-1 col-4 px-0"><a href="#" class="text-decoration-none text-muted"
                style="font-size: 0.9rem;">All</a>
        </li>
        <li style="list-style-type:none; border:1px solid rgba(51, 51, 51, 0.356);; border-radius:20px;"
            class="text-center py-1 w-75 px-0"><a href="#" class="text-decoration-none text-muted"
                style="font-size: 0.9rem;">Front-end
                Developer</a></li>
        <li style="list-style-type:none; border:1px solid rgba(51, 51, 51, 0.356);; border-radius:20px;"
            class="text-center py-1 w-75 px-0"><a href="#" class="text-decoration-none text-muted"
                style="font-size: 0.9rem;">Software
                Development</a>
        </li>
        <li style="list-style-type:none; border:1px solid rgba(51, 51, 51, 0.356);; border-radius:20px;"
            class="text-center py-1 w-75 px-0"><a href="#" class="text-decoration-none text-muted"
                style="font-size: 0.9rem;">Business
                Development</a>
        </li>
        <li style=" list-style-type:none; border:1px solid rgba(51, 51, 51, 0.356);; border-radius:20px; width:60% !important"
            class="text-center py-1 px-0">
            <a href="#" class="text-decoration-none text-muted px-0" style="font-size: 0.9rem;">Operations</a>
        </li>
    </div>

    <!--     Links to Javascripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
