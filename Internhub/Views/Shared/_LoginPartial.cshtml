@using Microsoft.AspNetCore.Identity

@inject SignInManager<InternhubUser> SignInManager
@inject UserManager<InternhubUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="company" id="register" asp-area="Identity" asp-page="/Account/RegisterCompany">Are you a company</a>
    </li>
    <li>
        <a class="login" id="login" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </li>
    <li>
        <a class="signup" id="register" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
    </li>
}
