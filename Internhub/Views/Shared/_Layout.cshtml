<!DOCTYPE html>
<html lang="en">

<head>
    <!--
        ==============
        Meta area tags
        =======================
    -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <!--Project title-->
    <title>@ViewData["Title"] Internhub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--Main css file in the wwwroot directory-->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <!--Font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <!--BootStrap Icons-->
    <link rel="stylesheet" href="~/lib/node_modules/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <!--
            ==================
            work on the website header here
                                        ===============
        -->

        <label class="logo"><a asp-area="" asp-controller="Home" asp-action="Index">Internhub</a></label>
        <nav>
            <ul class="layout-navbar">
                <li><a class="nav_content" asp-area="" asp-controller="Internships" asp-action="Index">Internships</a>
                </li>
                <li><a class="nav_content" asp-area="" asp-controller="Internships" asp-action="Applied">Applied
                        Jobs</a></li>
                <li><a class="nav_content" asp-area="Company" asp-controller="Home" asp-action="Index">Company</a></li>
                <partial name="_LoginPartial" />
            </ul>
        </nav>
        <!--=========
            Hamburger Menu Start
        -->
        <div id="hamburger-icon" onclick="toggleMobileMenu(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
            <ul class="mobile-menu">
                <li class="list-unstyled"><a class="nav_content" asp-area="" asp-controller="Internships"
                        asp-action="Index">Internships</a>
                </li>
                <li class="list-unstyled"><a class="nav_content" asp-area="" asp-controller="Internships"
                        asp-action="Applied">Applied
                        Jobs</a></li>
                <li class="list-unstyled"><a class="nav_content" asp-area="Company" asp-controller="Home"
                        asp-action="Index">Company</a></li>
                <li class="list-unstyled">
                    <a class="company">Are you a company</a>
                </li>
                <li class="list-unstyled">
                    <a class="login">Log in</a>
                </li>
                <li class="list-unstyled">
                    <a class="signup">Sign up</a>
                </li>
            </ul>

        </div>
        <!--=========
            Hamburger Menu End
        -->
    </header>

    <div>
        <!--=========================
            This renderBody joins the rest of the pages in the views folder to this section
                                =================
            -->
        @RenderBody()
    </div>

